<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="SleepActionSample">
    <Sequence>
      <SleepAction name="A"
                   action_name="sleep_service"
                   robot_position="A"
                   msec="1"/>
      <SleepAction name="C"
                   action_name="sleep_service"
                   robot_position="B"
                   msec="3"/>
      <SleepAction name="B"
                   action_name="sleep_service"
                   robot_position="C"
                   msec="2"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="SleepAction"
            editable="true">
      <input_port name="action_name"/>
      <input_port name="robot_position"/>
      <input_port name="msec"/>
    </Action>
  </TreeNodesModel>

</root>
